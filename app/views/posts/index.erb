<h1>All Posts</h1>
<% @posts.each do |post| %>
    <h4><a href="/posts/<%= post.id %>"><%=post.title %></a></h4>
    <img src="<%= post.image_url %>" alt="<%= post.title %>" height="200">
    <br><br> 
    <strong> Created At: <%= post.created_at %></strong>
    <p>Information: <%= post.description %></p>
    <p>By: <%= post.user.name %></p>
    <strong> Date Available At: <%= post.date__available %></strong>
<% end %>
